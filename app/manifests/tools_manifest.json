{
  "object": "list",
  "tools": [
    {
      "id": "web_search",
      "object": "tool",
      "type": "function",
      "description": "Performs real-time web searches for current information.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "Search text." },
          "max_results": { "type": "integer", "description": "Maximum number of results.", "default": 5 }
        },
        "required": ["query"]
      }
    },
    {
      "id": "file_search",
      "object": "tool",
      "type": "function",
      "description": "Searches and retrieves content from uploaded or linked files.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "User query to search within files." },
          "max_chunks": { "type": "integer", "description": "Maximum number of chunks to retrieve.", "default": 10 }
        },
        "required": ["query"]
      }
    },
    {
      "id": "code_interpreter",
      "object": "tool",
      "type": "function",
      "description": "Executes Python code in a sandboxed environment for data analysis, math, and scripting.",
      "parameters": {
        "type": "object",
        "properties": {
          "code": { "type": "string", "description": "Python code to execute." },
          "files": {
            "type": "array",
            "description": "Optional file identifiers to include in the environment.",
            "items": { "type": "string" }
          }
        },
        "required": ["code"]
      }
    },
    {
      "id": "image_generation",
      "object": "tool",
      "type": "function",
      "description": "Generates images from text prompts using DALLÂ·E models.",
      "parameters": {
        "type": "object",
        "properties": {
          "prompt": { "type": "string", "description": "Text description of the image to generate." },
          "size": {
            "type": "string",
            "enum": ["256x256", "512x512", "1024x1024"],
            "default": "512x512"
          },
          "n": { "type": "integer", "description": "Number of images to generate.", "default": 1 }
        },
        "required": ["prompt"]
      }
    },
    {
      "id": "audio_generation",
      "object": "tool",
      "type": "function",
      "description": "Generates speech audio from text using TTS models.",
      "parameters": {
        "type": "object",
        "properties": {
          "text": { "type": "string", "description": "Text to convert to speech." },
          "voice": {
            "type": "string",
            "description": "Voice name (e.g., alloy, verse, soft).",
            "default": "alloy"
          },
          "format": {
            "type": "string",
            "description": "Audio output format (mp3, wav, etc.).",
            "default": "mp3"
          }
        },
        "required": ["text"]
      }
    },
    {
      "id": "audio_transcription",
      "object": "tool",
      "type": "function",
      "description": "Transcribes speech audio to text using Whisper/ASR models.",
      "parameters": {
        "type": "object",
        "properties": {
          "file_id": { "type": "string", "description": "Identifier of the uploaded audio file." },
          "language": {
            "type": "string",
            "description": "Optional language code (e.g., en, id, zh).",
            "default": "auto"
          }
        },
        "required": ["file_id"]
      }
    },
    {
      "id": "vector_store_search",
      "object": "tool",
      "type": "function",
      "description": "Searches a vector store for relevant documents (file search / retrieval).",
      "parameters": {
        "type": "object",
        "properties": {
          "store_id": { "type": "string", "description": "Vector store identifier." },
          "query": { "type": "string", "description": "Text to search in the store." },
          "limit": {
            "type": "integer",
            "description": "Maximum documents to return.",
            "default": 3
          }
        },
        "required": ["store_id", "query"]
      },
      "beta": true
    },
    {
      "id": "computer_use",
      "object": "tool",
      "type": "function",
      "description": "Performs local environment actions such as opening files or automating tasks (Realtime / computer-use).",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Action type (e.g., open_file, read_text, click, type)."
          },
          "target": {
            "type": "string",
            "description": "Path, selector, or identifier for the action target."
          }
        },
        "required": ["action"]
      },
      "beta": true
    }
  ]
}

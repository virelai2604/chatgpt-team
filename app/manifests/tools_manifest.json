{
  "$schema": "https://openai.com/ground-truth/tools-manifest-v1.7.json",
  "version": "1.7",
  "tools": [
    {
      "tool_name": "code_interpreter",
      "entrypoint": "app.tools.code_interpreter.run_code",
      "enabled": true,
      "description": "Executes Python code and returns structured outputs."
    },
    {
      "tool_name": "file_upload",
      "entrypoint": "app.tools.file_upload.upload_file",
      "enabled": true,
      "description": "Uploads a file to the relay and returns its metadata."
    },
    {
      "tool_name": "file_download",
      "entrypoint": "app.tools.file_download.download_file",
      "enabled": true,
      "description": "Downloads file content by ID."
    },
    {
      "tool_name": "file_search",
      "entrypoint": "app.tools.file_search.search_files",
      "enabled": true,
      "description": "Searches within uploaded files using keywords or embeddings."
    },
    {
      "tool_name": "vector_store_retrieval",
      "entrypoint": "app.tools.vector_store_retrieval.retrieve_vectors",
      "enabled": true,
      "description": "Retrieves documents from a vector store via embeddings."
    },
    {
      "tool_name": "image_generation",
      "entrypoint": "app.tools.image_generation.generate_image",
      "enabled": true,
      "description": "Generates images from text prompts."
    },
    {
      "tool_name": "video_generation",
      "entrypoint": "app.tools.video_generation.generate_video",
      "enabled": true,
      "description": "Generates video content from text descriptions."
    },
    {
      "tool_name": "web_search",
      "entrypoint": "app.tools.web_search.perform_search",
      "enabled": true,
      "description": "Performs external web searches and returns summarized results."
    },
    {
      "tool_name": "computer_use",
      "entrypoint": "app.tools.computer_use.perform_action",
      "enabled": true,
      "description": "Executes system-level operations in a sandboxed environment."
    }
  ]
}

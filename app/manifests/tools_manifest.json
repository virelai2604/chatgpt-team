{
  "object": "list",
  "tools": [
    {
      "id": "web_search",
      "object": "tool",
      "type": "function",
      "description": "Performs real-time web searches for current information.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "Search text." },
          "max_results": { "type": "integer", "description": "Maximum number of results.", "default": 5 }
        },
        "required": ["query"]
      }
    },
    {
      "id": "file_search",
      "object": "tool",
      "type": "function",
      "description": "Searches and retrieves content from uploaded or linked files.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "Search term to match against file embeddings." },
          "limit": { "type": "integer", "description": "Number of matched chunks to return.", "default": 3 }
        },
        "required": ["query"]
      }
    },
    {
      "id": "code_interpreter",
      "object": "tool",
      "type": "function",
      "description": "Executes Python code in a secure sandbox for computation or data analysis.",
      "parameters": {
        "type": "object",
        "properties": {
          "code": { "type": "string", "description": "Python code to execute." },
          "context": { "type": "string", "description": "Optional description of task context." }
        },
        "required": ["code"]
      }
    },
    {
      "id": "image_generation",
      "object": "tool",
      "type": "function",
      "description": "Generates images from text prompts using DALLÂ·E 3.",
      "parameters": {
        "type": "object",
        "properties": {
          "prompt": { "type": "string", "description": "Text description of the image to generate." },
          "size": {
            "type": "string",
            "enum": ["256x256", "512x512", "1024x1024"],
            "default": "512x512"
          },
          "n": { "type": "integer", "description": "Number of images to generate.", "default": 1 }
        },
        "required": ["prompt"]
      }
    },
    {
      "id": "audio_generation",
      "object": "tool",
      "type": "function",
      "description": "Generates speech audio from text using TTS-1 and TTS-1-1106 models.",
      "parameters": {
        "type": "object",
        "properties": {
          "text": { "type": "string", "description": "Text to convert to speech." },
          "voice": { "type": "string", "description": "Voice name (e.g., alloy, verse, soft).", "default": "alloy" },
          "format": { "type": "string", "description": "Audio output format (mp3, wav, etc.).", "default": "mp3" }
        },
        "required": ["text"]
      }
    },
    {
      "id": "moderation",
      "object": "tool",
      "type": "function",
      "description": "Evaluates text for content safety and policy compliance.",
      "parameters": {
        "type": "object",
        "properties": {
          "input": { "type": "string", "description": "Text to evaluate for policy violations." }
        },
        "required": ["input"]
      }
    },
    {
      "id": "vector_store_retrieval",
      "object": "tool",
      "type": "function",
      "description": "Retrieves context data from a vector store given a query embedding.",
      "parameters": {
        "type": "object",
        "properties": {
          "store_id": { "type": "string", "description": "Vector store identifier." },
          "query": { "type": "string", "description": "Text to search in the store." },
          "limit": { "type": "integer", "description": "Maximum documents to return.", "default": 3 }
        },
        "required": ["store_id", "query"]
      },
      "beta": true
    },
    {
      "id": "computer_use",
      "object": "tool",
      "type": "function",
      "description": "Performs local environment actions such as opening files or automating tasks (Realtime Beta).",
      "parameters": {
        "type": "object",
        "properties": {
          "action": { "type": "string", "description": "Action type (e.g., open_file, read_text)." },
          "target": { "type": "string", "description": "Path or identifier for the action target." }
        },
        "required": ["action"]
      },
      "beta": true
    }
  ]
}

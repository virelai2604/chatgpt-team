{
  "object": "list",
  "tools": [
    {
      "type": "function",
      "id": "web_search",
      "name": "web_search",
      "description": "Search the web for real-time information, news, and knowledge.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The search query to run."
          },
          "recency_days": {
            "type": "integer",
            "description": "Optional recency filter in days for search results.",
            "minimum": 0
          }
        },
        "required": ["query"]
      }
    },
    {
      "type": "function",
      "id": "file_search",
      "name": "file_search",
      "description": "Search across uploaded files or vector stores to retrieve relevant chunks of data.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Natural language query to match against indexed content."
          },
          "top_k": {
            "type": "integer",
            "description": "Maximum number of matches to return.",
            "minimum": 1,
            "default": 10
          },
          "vector_store_id": {
            "type": "string",
            "description": "Optional vector store identifier to restrict search."
          }
        },
        "required": ["query"]
      }
    },
    {
      "type": "function",
      "id": "retrieval",
      "name": "retrieval",
      "description": "Higher-level retrieval abstraction built on top of vector stores / file search.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "User question to answer using retrieved context."
          },
          "top_k": {
            "type": "integer",
            "description": "Number of documents or chunks to retrieve.",
            "minimum": 1,
            "default": 8
          },
          "vector_store_ids": {
            "type": "array",
            "description": "List of vector store IDs to search.",
            "items": { "type": "string" }
          }
        },
        "required": ["query"]
      }
    },
    {
      "type": "function",
      "id": "image_generation",
      "name": "image_generation",
      "description": "Generate images from text prompts using the OpenAI images API.",
      "parameters": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Description of the image to generate."
          },
          "size": {
            "type": "string",
            "description": "Requested image size (e.g. 1024x1024).",
            "default": "1024x1024"
          },
          "n": {
            "type": "integer",
            "description": "Number of images to generate.",
            "minimum": 1,
            "maximum": 4,
            "default": 1
          }
        },
        "required": ["prompt"]
      }
    },
    {
      "type": "function",
      "id": "code_interpreter",
      "name": "code_interpreter",
      "description": "Execute code in a sandboxed environment (similar to Code Interpreter).",
      "parameters": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string",
            "description": "Programming language to use (e.g. python).",
            "default": "python"
          },
          "code": {
            "type": "string",
            "description": "Code snippet to execute."
          },
          "files": {
            "type": "array",
            "description": "Optional file IDs to attach before execution.",
            "items": { "type": "string" }
          }
        },
        "required": ["code"]
      }
    },
    {
      "type": "function",
      "id": "computer_use",
      "name": "computer_use",
      "description": "Control a computer environment: open apps, browse, click, type, etc.",
      "parameters": {
        "type": "object",
        "properties": {
          "task": {
            "type": "string",
            "description": "Natural language description of the computer task to perform."
          }
        },
        "required": ["task"]
      }
    },
    {
      "type": "function",
      "id": "apply_patch",
      "name": "apply_patch",
      "description": "Apply patch-style edits to text or files (e.g. unified diff patches).",
      "parameters": {
        "type": "object",
        "properties": {
          "target": {
            "type": "string",
            "description": "The original content to be modified."
          },
          "patch": {
            "type": "string",
            "description": "Patch instructions or diff to apply."
          }
        },
        "required": ["target", "patch"]
      }
    },
    {
      "type": "function",
      "id": "shell",
      "name": "shell",
      "description": "Execute shell commands in a controlled environment.",
      "parameters": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Shell command to execute."
          },
          "timeout": {
            "type": "integer",
            "description": "Maximum execution time in seconds.",
            "minimum": 1,
            "default": 30
          }
        },
        "required": ["command"]
      }
    },
    {
      "type": "function",
      "id": "local_shell",
      "name": "local_shell",
      "description": "Execute shell commands on a local or on-prem runtime (local-shell tooling).",
      "parameters": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Shell command to execute locally."
          },
          "working_directory": {
            "type": "string",
            "description": "Optional working directory path."
          },
          "timeout": {
            "type": "integer",
            "description": "Maximum execution time in seconds.",
            "minimum": 1,
            "default": 30
          }
        },
        "required": ["command"]
      }
    },
    {
      "type": "function",
      "id": "mcp_connectors",
      "name": "mcp_connectors",
      "description": "Query external systems via MCP connectors (databases, SaaS tools, internal APIs).",
      "parameters": {
        "type": "object",
        "properties": {
          "server": {
            "type": "string",
            "description": "MCP server identifier or name."
          },
          "method": {
            "type": "string",
            "description": "Server-defined method or command."
          },
          "arguments": {
            "type": "object",
            "description": "JSON-serialisable arguments for the MCP call.",
            "additionalProperties": true
          }
        },
        "required": ["server", "method"]
      }
    },
    {
      "type": "function",
      "id": "audio_transcription",
      "name": "audio_transcription",
      "description": "Transcribe audio to text using the OpenAI audio transcription endpoints.",
      "parameters": {
        "type": "object",
        "properties": {
          "file_id": {
            "type": "string",
            "description": "File ID of the audio to transcribe."
          },
          "language": {
            "type": "string",
            "description": "Optional language hint for transcription."
          }
        },
        "required": ["file_id"]
      }
    },
    {
      "type": "function",
      "id": "audio_generation",
      "name": "audio_generation",
      "description": "Generate speech audio from text.",
      "parameters": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Text to synthesise as speech."
          },
          "voice": {
            "type": "string",
            "description": "Optional voice preset."
          }
        },
        "required": ["text"]
      }
    },
    {
      "type": "function",
      "id": "video_generation",
      "name": "video_generation",
      "description": "Generate or remix videos using the OpenAI videos API.",
      "parameters": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Description of the video to generate or the edit instructions."
          },
          "mode": {
            "type": "string",
            "description": "Generation mode such as 'create' or 'remix'.",
            "default": "create"
          }
        },
        "required": ["prompt"]
      }
    },
    {
      "type": "function",
      "id": "realtime_session",
      "name": "realtime_session",
      "description": "Establish a realtime session (WebRTC/WebSocket/SIP) with a model like gpt-4o-realtime-preview.",
      "parameters": {
        "type": "object",
        "properties": {
          "session_type": {
            "type": "string",
            "description": "Type of realtime session (websocket, webrtc, sip).",
            "default": "websocket"
          },
          "instructions": {
            "type": "string",
            "description": "Optional high-level instructions for the realtime agent."
          }
        }
      }
    }
  ]
}

# -----------------------------
# ChatGPT Team Relay â€” Example Env
# Do NOT put real secrets here.
# -----------------------------

APP_MODE=development
ENVIRONMENT=development
PROJECT_NAME=chatgpt-team-relay
RELAY_NAME=ChatGPT Team Relay
BIFL_VERSION=local-dev

# Python version is for Render; locally you can ignore it
PYTHON_VERSION=3.12.5

LOG_LEVEL=INFO
LOG_FORMAT=plain
LOG_COLOR=false

# OpenAI upstream
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=sk-REPLACE_ME
OPENAI_ORGANIZATION=
OPENAI_PROJECT=

# Optional beta headers (only if your app uses them)
OPENAI_BETA=
OPENAI_ASSISTANTS_BETA=assistants=v2
OPENAI_REALTIME_BETA=realtime=v1
OPENAI_MAX_RETRIES=3

# Models
DEFAULT_MODEL=gpt-5.1
REALTIME_MODEL=gpt-realtime

# Relay runtime (local)
RELAY_HOST=0.0.0.0
RELAY_PORT=8000
RELAY_TIMEOUT_SECONDS=120
PROXY_TIMEOUT_SECONDS=120

# Streaming / orchestration
ENABLE_STREAM=true
CHAIN_WAIT_MODE=auto

# Relay auth
RELAY_AUTH_ENABLED=true
RELAY_KEY=replace-with-relay-key
CHATGPT_ACTIONS_SECRET=
RELAY_AUTH_TOKEN=

# CORS (CSV or JSON list)
CORS_ALLOW_ORIGINS=http://localhost:3000,https://chat.openai.com
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept
CORS_ALLOW_CREDENTIALS=false

# Tools / validation
TOOLS_MANIFEST=app/manifests/tools_manifest.json
VALIDATION_SCHEMA_PATH=
